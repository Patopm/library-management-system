<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.sqlite.JDBC</property>
        <property name="connection.url">jdbc:sqlite:target/test-db/library-test.db</property>

        <property name="dialect">
            org.hibernate.community.dialect.SQLiteDialect
        </property>

        <property name="show_sql">false</property>
        <property name="format_sql">false</property>
        <property name="hbm2ddl.auto">update</property>

        <mapping class="com.library.model.Book"/>
        <mapping class="com.library.model.Member"/>
        <mapping class="com.library.model.Loan"/>
        <mapping class="com.library.model.BookStock"/>
    </session-factory>
</hibernate-configuration>
